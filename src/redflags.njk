<script>

function playVideo(cover) {
  // Encuentra el contenedor padre
  var container = cover.parentElement;

  // Oculta la portada
  cover.style.display = 'none';

  // Encuentra el video dentro del contenedor y lo reproduce
  var video = container.querySelector('.video-element');
  video.play();
}

</script>

