{% extends "src/base.njk" %}

{% block head %}
<title>Observatorio Fiscla | Red Ciudadana</title>
{% endblock %}

{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="slider-element bg-color" style="background-image: url('/elementos/SLIDER/SLIDER-02.png')">
			<div class="container">
				<div class="row d-flex">
					<div class="col-lg-6 col-md-12 col-sm-12 d-flex align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4">

						<h2 class="text-slider">Conoce información detallada sobre los recursos asignados y su ejecución mensual a nivel nacional
						</h2>

					</div>
				</div>
			</div>
        </section>

		<!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">

		<!-- Nosotros
		============================================= -->

				<div class="container clearfix">
					<div class="row my-4">
						<h2 class="text-titles">Datos Sobre Presupuesto</h2>
					</div>

					<div class="row justify-content-center col-mb-50">
						<div class="col-sm-12 col-lg-4">
							<div class="d-flex">
								<img width="80px" style="padding:5px" src="/elementos/02_ICONOS/ICONO-16.png">
								<div class="fbox-content px-0 ">
									<h1 class="text-titles2">PRESUPUESTO</h1>
									<p class="text-titles"></p>
								</div>
							</div>
						</div>

						<div class="col-sm-12 col-lg-4 d-flex justify-content-center">
							<div class="feature-box media-box">
								<div class="d-flex">
									<img width="80px" style="padding:5px" src="/elementos/02_ICONOS/ICONO-18.png">
									<div class="fbox-content px-0 ">
										<h1 class="text-titles2">EJECUCIÓN</h1>
										<p class="text-titles"></p>
									</div>
								</div>
							</div>
						</div>

						<div class="col-sm-12 col-lg-4 d-flex justify-content-end">
							<div class="feature-box media-box">
								<div class="fbox-content px-0 ">
									<div class="d-flex">
										<img width="80px" style="padding:5px" src="/elementos/02_ICONOS/ICONO-17.png">
										<div class="fbox-content px-0 ">
											<h1 class="text-titles2">% EJECUCIÓN</h1>
											<p class="text-titles"></p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</section>

		<!-- Podcast
		============================================= -->
		<section>
			<div>
				<div class="section py-6 my-6" style="background-color: #000">
					{% if collections.podcasts %}
					{% for podcast in collections.podcasts | limit(1)%}
					<div class="container">
						<div class="row align-items-center col-mb-50">
							<!--div class="col-md-6">
								<img src="demos/forum/images/doc.svg" alt="Doc Image">
							</div-->
							<div class="col-md-12 ">
								<div class="row posts-md col-mb-30" style="align-items:center">
									
									<div class="entry col-sm-12 col-xl-6 ">
										<div class="grid-inner">
											<span class="podcast-span">PODCAST</span>
											<h3 class="podcast-title">{{podcast.data.title}}</h3>
											<h3 class="podcast-description">{{podcast.data.description}}</h3>
											<br>
											<a href="" ><p class="podcast-button my-2">Suscribirse</p></a>
										</div>
									</div>

									<div class="entry col-sm-12 col-xl-6">
										<div class="grid-inner">
											<iframe src="{{podcast.data.link}}" width="100%"
                							height="232" frameBorder="0" allowfullscreen=""
               								 allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
										</div>
									</div>
									
								</div>
							</div>
						</div>
					</div>
					{% endfor %}
					{% endif %}
				</div>
			</div>
		</section>

{% endblock %}