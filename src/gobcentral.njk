---
permalink: "gobcentral/index.html"
---

{% extends "src/base.njk" %}

{% block head %}
<title>Gobierno Central | Observatorio Fiscal</title>
{% endblock %}

{% block content %}
    {% for item in collections.gobcentral %}
    {% if item.data.ano === '2022' %}
        <!-- Slider
		============================================= -->
		<section id="slider" class="slider-element bg-color" style="background-image: url('{{item.data.slider}}">
			<div class="container">
				<div class="row d-flex">
					<div class="col-lg-6 col-md-12 col-sm-12 d-flex align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4">

						<h2 class="text-slider">Conoce información detallada sobre los recursos asignados y su ejecución mensual a nivel nacional
						</h2>

					</div>
				</div>
			</div>
        </section>

		<!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">

		<!-- Nosotros
		============================================= -->

				<div class="container clearfix">
					<div class="row my-4">
						<h2 class="text-titles">Datos Sobre Presupuesto</h2>
					</div>

					<div class="row justify-content-center col-mb-50">
						<div class="col-sm-12 col-lg-4">
							<div class="d-flex">
								<img width="80px" style="padding:5px" src="/elementos/02_ICONOS/ICONO-16.png">
								<div class="fbox-content px-0 ">
									<h1 class="text-titles2">PRESUPUESTO</h1>
									<p class="text-titles">{{item.data.resumen1}}</p>
								</div>
							</div>
						</div>

						<div class="col-sm-12 col-lg-4 d-flex justify-content-center">
							<div class="feature-box media-box">
								<div class="d-flex">
									<img width="80px" style="padding:5px" src="/elementos/02_ICONOS/ICONO-18.png">
									<div class="fbox-content px-0 ">
										<h1 class="text-titles2">EJECUCIÓN</h1>
										<p class="text-titles">{{item.data.resumen2}}</p>
									</div>
								</div>
							</div>
						</div>

						<div class="col-sm-12 col-lg-4 d-flex justify-content-end">
							<div class="feature-box media-box">
								<div class="fbox-content px-0 ">
									<div class="d-flex">
										<img width="80px" style="padding:5px" src="/elementos/02_ICONOS/ICONO-17.png">
										<div class="fbox-content px-0 ">
											<h1 class="text-titles2">% EJECUCIÓN</h1>
											<p class="text-titles">{{item.data.resumen3}}</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</section>

		<!-- Podcast
		============================================= -->
		<section>
			<div>
				<div class="section py-6 my-6" style="background-color: #000">
					{% if collections.podcasts %}
					{% for podcast in collections.podcasts | limit(1)%}
					<div class="container">
						<div class="row align-items-center col-mb-50">
							<!--div class="col-md-6">
								<img src="demos/forum/images/doc.svg" alt="Doc Image">
							</div-->
							<div class="col-md-12 ">
								<div class="row posts-md col-mb-30" style="align-items:center">
									
									<div class="entry col-sm-12 col-xl-6 ">
										<div class="grid-inner">
											<span class="podcast-span">PODCAST</span>
											<h3 class="podcast-title">{{podcast.data.title}}</h3>
											<h3 class="podcast-description">{{podcast.data.description}}</h3>
											<br>
											<a href="" ><p class="podcast-button my-2">Suscribirse</p></a>
										</div>
									</div>

									<div class="entry col-sm-12 col-xl-6">
										<div class="grid-inner">
											<iframe src="{{podcast.data.link}}" width="100%"
                							height="232" frameBorder="0" allowfullscreen=""
               								 allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
										</div>
									</div>
									
								</div>
							</div>
						</div>
					</div>
					{% endfor %}
					{% endif %}
				</div>
			</div>
		</section>

		<!-- Section Grafica 1
		============================================= -->
		<section>
			<div>
				<div class="section py-6 my-6" style="background-color: #fff">
					<div class="container">
						<div class="row justify-content-center align-items-center col-mb-50">
							<embed class="w-100 my-4" src="{{item.data.grafica}}">
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Section Tabla 1
		============================================= -->
		<section>
			<div>
				<div class="section py-6 my-6" style="background-color: #fff">
					<div class="container">
						<div class="row justify-content-center align-items-center col-mb-50">
							<embed class="w-100 my-4" src="{{item.data.tabla}}">
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Blogs y Podcasts
		============================================= -->
		<section>
			<div>
				<div class="container my-4">
					<div class="row text-center mb-5"  style="gap:60px;align-items:flex-start">
						<!--div class="col-lg-6">
							<h3 class="display-4 fw-bolder mb-3">Publicaciones</h3>
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eligendi rem, facilis nobis voluptatum est voluptatem accusamus molestiae eaque perspiciatis mollitia.</p>
						</div-->

						<div class="row posts-md col-mb-30 col-xl-8 col-sm-12">

							<h2 class="font-bold text-4xl border-b-2 border-blue-500 mb-4 pb-4" style="text-align:left;margin:1rem 0">Lo último</h2>

							{% for blog in collections.blogs | reverse | limit(5) %}
					
				
							<a href="{{blog.url}}" class="flex border-b-2 pb-4 mb-4 text-current responsive">
							<img src="{{ blog.data.image }}" alt="Evento" class="w-36">
							<div class="pl-8 my-auto" style="text-align:left">
								<h5 class="font-bold text-lg">
								{{blog.data.title }}
								</h5>
								<span class="text-sm">
								{{blog.data.date | dateFormat('DD/MM/YYYY')}}
								</span><br>
								<span class="text-sm">
								{{blog.data.description}}
								</span>
							</div>
							</a>

							{% endfor %}

							<div class="mb-6" style="display:flex; justify-content:flex-end">
								<a href="/blogs/index.html"><p class="page-button my-2">Más Blogs<i class="icon-arrow-right" style="margin-left:5px"></i></p></a>
							</div>

							
				
						</div>

						<div class="row posts-md col-mb-30 col-xl-3 col-sm-12">
							<h3 class="uppercase font-bold text-base tracking-wider my-auto mb-4 pb-4"style="text-align:left;margin:1rem 0">Podcasts</h3>

							{% for podcast in collections.podcasts | reverse | limit(4)%}
							<div class="entry ">
								<div class="grid-inner">
									<iframe height="155px" src="{{podcast.data.link}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
									<p class="txt-video">{{podcast.data.description}}</p>
								</div>
								
							</div>
							{% endfor %}

							<div class="mb-6">
								<div style="display:flex; justify-content:flex-end">
								<a href="/podcasts/index.html"><p class="page-button my-2">Más Podcasts<i class="icon-arrow-right" style="margin-left:5px"></i></p></a>
							</div>	
						</div>	
						

					</div>	
				</div>
			</div>
		</div>
	</section>
    {% endif %}
    {% endfor %}

{% endblock %}